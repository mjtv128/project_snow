<div align='center'>
<p>
<%= form_for(@meetup) do |f| %>
<p>
<%= f.label :event_name %><br>
<%= f.text_field :event_name %><br><br>
</p>

<p>
<%= f.label :description %><br>
<%= f.text_area :description %><br><br>
</p>

<p>
<%= f.label :rendezvous %><br>
<%= f.text_field :location %><br><br>
</p>

<p>
<%= f.label :when%><br>
<%= f.datetime_select :date_time, :order => [:month, :day] %><br><br>
</p>

<p>
<%= f.label :resort_id %><br>
<%= f.collection_select(:resort_id, Resort.all, :id, :resort_name) %><br><br>
</p>
 
<%= f.hidden_field :organiser_id, :value => current_user.id %><br>


<p><%= f.submit %><p>

<% end %>
</p>
</div>