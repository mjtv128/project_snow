<h1 align='center'>All Meetups</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h3> Search by Resort:</h3>
  <%= form_tag(meetups_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search by Resort") %>
<% end %>

<table>
    <thead>
    <tr>
        <th>Event</th>
        <th>Resort</th>
        <th>Date & Time</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <tr>
        <% @meetups.each do |meetup| %>
        <td><%= link_to meetup.event_name, meetup_path(meetup) %></td>
        <td><%= link_to meetup.resort.resort_name, resort_path(meetup.resort_id) %></td>
        <td><%= meetup.date_time %></td>
    </tr>
    <% end %>
</tbody>
</table>