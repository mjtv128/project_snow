<p>
<% if @resort.location %>
<strong>Location:</strong> <%= @resort.location %></p>
<p>
<% end %>
<p>
<strong>Population: </strong><%= @resort.population%></p>
<p>
</div>
<img src= <%= @resort.piste_map %> align= 'center' width = 90%></p>
<p>
<strong>Meetups happening here:</strong>
<% @resort.meetups.each do |meetup| %>
<ul>
<li><%= link_to meetup.event_name, meetup_path(meetup.id) %></li>
</ul>
<% end %>
<br>

<strong>Reviews:</strong>
<% @resort.reviews.each do |review| %>
<ul>
<li><%= link_to review.title, review_path(review.id) %> - <%= link_to review.user.full_name, user_path(review.user) %>, <%= review.rating %></li>
</ul>
<% end %>


